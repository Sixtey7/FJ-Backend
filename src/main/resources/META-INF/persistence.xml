<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="FJDB" transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.sixtey7.fjservice.model.converter.AccountConverter</class>
        <class>com.sixtey7.fjservice.model.converter.TransactionConverter</class>
        <class>com.sixtey7.fjservice.model.AccountRecord</class>
        <class>com.sixtey7.fjservice.model.Account</class>
        <class>com.sixtey7.fjservice.model.TransactionRecord</class>
        <class>com.sixtey7.fjservice.model.Transaction</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/fjdb?stringtype=unspecified" />
            <property name="javax.persistence.jdbc.user" value="fjuser" />
            <property name="javax.persistence.jdbc.password" value="12345" />
        </properties>
    </persistence-unit>
</persistence>